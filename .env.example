# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin (Server-side)
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account_email
FIREBASE_ADMIN_PRIVATE_KEY="your_private_key"

# AI Providers
OPENAI_API_KEY=your_openai_api_key
# OpenAI chat model for text generation (e.g., gpt-4-turbo)
OPENAI_TEXT_MODEL=gpt-4-turbo
ANTHROPIC_API_KEY=your_anthropic_api_key
GEMINI_API_KEY=your_gemini_api_key
# Optional (defaults to gemini-pro-latest). Run `node scripts/test-gemini-text.js` to list models for your key.
GEMINI_TEXT_MODEL=gemini-pro-latest
# Optional (defaults to imagen-4.0-fast-generate-001)
GEMINI_IMAGEN_MODEL=imagen-4.0-fast-generate-001

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
ADMIN_EMAIL=admin@skrzypecki.pl

# Storage
# Use this to force AI-generated images (thumbnails/figures) to upload to a specific provider
# even if STORAGE_PROVIDER is set to something else (e.g., firebase).
AI_STORAGE_PROVIDER=cloudinary

# Cover image fallback (when AI cover generation/upload fails)
# - wikimedia (default): searches Wikimedia Commons and picks an image URL
# - unsplash: uses source.unsplash.com by query (no key)
COVER_IMAGE_SEARCH_PROVIDER=wikimedia

# Export API (for okulistykaakademicka.pl)
EXPORT_API_SECRET=your_export_secret_key

# Public patient generator (no registration)
# 0 = submit as draft (admin review), 1 = auto-publish immediately
GUEST_PATIENT_ARTICLES_AUTO_PUBLISH=0

# WordPress sync (publish patient articles to Strefa wiedzy)
# 0 = disabled, 1 = enabled
WORDPRESS_PATIENT_SYNC_ENABLED=0
WORDPRESS_SITE_URL=https://okulistykaakademicka.pl
WORDPRESS_USERNAME=your_wordpress_username
WORDPRESS_APPLICATION_PASSWORD=your_wordpress_application_password
# Default category slug on WordPress
WORDPRESS_PATIENT_CATEGORY_SLUG=strefa-wiedzy
# publish | draft | pending | private
WORDPRESS_PATIENT_POST_STATUS=publish
# Request timeout in milliseconds
WORDPRESS_PATIENT_SYNC_TIMEOUT_MS=15000
